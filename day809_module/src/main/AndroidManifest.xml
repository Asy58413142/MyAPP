<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="study.com.cn.day809_module">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_beach_access"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".activity.RecyclerViewActivity"/>
        <activity android:name=".activity.ListViewActivity"/>
        <activity android:name=".activity.NavigationViewActivity"/>
        <activity android:name=".activity.CardViewActivity"/>
        <activity android:name=".activity.AppBarActivity"/>
    </application>

</manifest>